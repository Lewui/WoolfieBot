{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES6",
        "module": "commonJS",
        "removeComments": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitThis":true,
        "outDir": "dist",
        "pretty": true,
        "lib": ["ES2020"],
        "noImplicitAny": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src", "module.d.ts"
    ],
    "exclude": [
        "dist"
    ]
}
